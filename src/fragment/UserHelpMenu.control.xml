<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:kM="kellojo.m">

    <ResponsivePopover id="idPopover"
        title="{$this>/title}"
        titleAlignment="Center"
        showCloseButton="false"
        contentWidth="250px"
        class="kellojoMUserHelpMenu-popover">

        <customHeader>
            <Bar>
                <contentMiddle>
                    <Title text="{$this>/title}"/>
                </contentMiddle>
                <contentRight>
                    <Button text="Close" press="close" visible="{$this>/closeButtonVisible}"/>
                </contentRight>
            </Bar>
        </customHeader>
    
        <List class="kellojoMUserHelpMenu-list" id="idList">
            
        </List>

    </ResponsivePopover>

</core:FragmentDefinition>